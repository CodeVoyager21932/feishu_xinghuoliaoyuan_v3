/* 导航栏容器 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  box-sizing: border-box;
  transition: background 0.3s;
}

/* 玻璃拟态效果（高端机型） */
.nav-bar.glass {
  background: rgba(255, 255, 255, 0.6) !important;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 降级方案：不支持backdrop-filter的机型 */
@supports not (backdrop-filter: blur(20px)) {
  .nav-bar.glass {
    background: rgba(255, 255, 255, 0.9) !important;
  }
}

/* 透明背景 */
.nav-bar.transparent {
  background: transparent !important;
}

/* 导航栏内容区 */
.nav-bar-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

/* 自定义胶囊（左侧） */
.nav-capsule {
  position: absolute;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 999px;
  padding: 0 12rpx;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-sizing: border-box;
}

/* 降级方案 */
@supports not (backdrop-filter: blur(10px)) {
  .nav-capsule {
    background: rgba(255, 255, 255, 0.85);
  }
}

/* 返回/主页按钮 */
.back-btn,
.home-btn {
  width: 64rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
  transition: opacity 0.2s;
}

.back-btn:active,
.home-btn:active {
  opacity: 0.6;
}

/* 分隔线 */
.divider {
  width: 1rpx;
  height: 50%;
  background: rgba(0, 0, 0, 0.2);
  margin: 0 4rpx;
}

/* 标题 */
.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  pointer-events: none;
}

.title-text {
  display: inline-block;
}

.font-serif {
  font-family: "Songti SC", serif;
}

/* 占位元素 */
.nav-placeholder {
  width: 100%;
}
