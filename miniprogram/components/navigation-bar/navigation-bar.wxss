.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  box-sizing: border-box;
  transition: all 0.3s;
}

.nav-bar.glass {
  background: rgba(255, 255, 255, 0.6) !important;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.nav-bar.transparent {
  background: transparent !important;
}

.nav-bar-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.nav-capsule {
  position: absolute;
  left: 24rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 32rpx;
  padding: 0 12rpx;
  backdrop-filter: blur(10px);
}

.back-btn, .home-btn {
  width: 64rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.divider {
  width: 1rpx;
  height: 24rpx;
  background: rgba(0, 0, 0, 0.2);
  margin: 0 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.font-serif {
  font-family: "Songti SC", serif;
}
