/* components/navigation-bar/navigation-bar.wxss */
.nav-placeholder {
  width: 100%;
  background: transparent;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  transition: background 0.3s ease;
}

.glass-effect {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-capsule {
  position: absolute;
  left: 24rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 32rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.capsule-btn {
  width: 64rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.capsule-btn:active {
  opacity: 0.6;
}

.capsule-divider {
  width: 1rpx;
  height: 24rpx;
  background: rgba(0, 0, 0, 0.2);
  margin: 0 8rpx;
}

.icon-back, .icon-home {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary, #1F1F1F);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 确保标题不被胶囊遮挡，虽然有width限制，但居中需要绝对定位或flex调整 */
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  pointer-events: none; /* 让点击穿透标题 */
}
