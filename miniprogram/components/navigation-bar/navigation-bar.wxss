/* components/navigation-bar/navigation-bar.wxss */
.nav-placeholder {
  width: 100%;
  background: transparent;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  transition: background 0.3s ease;
}

.glass-effect {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.nav-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-capsule {
  position: absolute;
  left: 24rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 40rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08),
              0 0 1rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.capsule-btn {
  width: 68rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  transition: all 0.2s ease;
  position: relative;
}

.capsule-btn::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  background: rgba(0, 0, 0, 0.04);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.capsule-btn:active::before {
  opacity: 1;
}

.capsule-btn:active {
  transform: scale(0.95);
}

.capsule-divider {
  width: 2rpx;
  height: 28rpx;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.15) 50%,
    rgba(0, 0, 0, 0) 100%
  );
  margin: 0 4rpx;
}

.icon-back, .icon-home {
  width: 44rpx;
  height: 44rpx;
  transition: transform 0.2s ease;
}

.capsule-btn:active .icon-back,
.capsule-btn:active .icon-home {
  transform: scale(0.9);
}

.nav-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary, #1F1F1F);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  pointer-events: none;
  letter-spacing: 0.5rpx;
}
