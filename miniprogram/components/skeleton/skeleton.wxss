/* components/skeleton/skeleton.wxss */
.skeleton-container {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

.skeleton-bg {
  background: #f2f2f2;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.skeleton-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.6) 50%, rgba(255,255,255,0) 100%);
  transform: skewX(-25deg) translateX(-150%);
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { transform: skewX(-25deg) translateX(-150%); }
  100% { transform: skewX(-25deg) translateX(150%); }
}

/* Header Style */
.skeleton-header {
  display: flex;
  align-items: flex-end;
  margin-bottom: 40rpx;
  height: 400rpx; /* Match hero header height approx */
}

.skeleton-avatar {
  width: 180rpx;
  height: 220rpx;
  border-radius: 24rpx;
  margin-right: 32rpx;
}

.skeleton-title-group {
  flex: 1;
}

.skeleton-title {
  width: 60%;
  height: 56rpx;
  margin-bottom: 20rpx;
}

.skeleton-badge {
  width: 30%;
  height: 32rpx;
  margin-bottom: 16rpx;
}

.skeleton-text-sm {
  width: 40%;
  height: 24rpx;
}

/* Content Style */
.skeleton-content {
  margin-bottom: 32rpx;
}

.skeleton-section-title {
  width: 200rpx;
  height: 40rpx;
  margin-bottom: 24rpx;
}

.skeleton-paragraph {
  width: 100%;
  height: 30rpx;
  margin-bottom: 16rpx;
}

.skeleton-paragraph.short {
  width: 80%;
}
