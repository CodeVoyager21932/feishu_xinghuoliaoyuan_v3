/* components/audio-player/audio-player.wxss */
.audio-player-float {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 9998;
}

/* 悬浮球 */
.float-ball {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.float-ball:active {
  transform: scale(0.95);
}

/* 黑胶唱片 */
.vinyl-disc {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #1A1A1A;
  position: relative;
  overflow: hidden;
  border: 4rpx solid #333333;
}

.vinyl-disc.rotating {
  animation: rotate 8s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.disc-cover {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.disc-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.3);
}

/* 控制面板 */
.control-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 9999;
}

.control-panel.show {
  transform: translateY(0);
}

.panel-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 音频信息 */
.audio-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.audio-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.audio-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.audio-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-artist {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 32rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.control-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.2);
}

.control-btn.main-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #D32F2F 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 77, 79, 0.4);
}

.btn-icon {
  font-size: 40rpx;
}

.main-btn .btn-icon {
  font-size: 48rpx;
}
