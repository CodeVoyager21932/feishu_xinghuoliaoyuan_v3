/* pages/radio/radio.wxss */
.radio-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #2C3E50 0%, #34495E 100%);
  padding: 180rpx 32rpx 120rpx;
}

/* 复古收音机头部 */
.radio-header {
  margin-bottom: 40rpx;
}

.radio-frame {
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  border: 4rpx solid #654321;
}

.frequency-dial {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.dial-marks {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.mark {
  width: 2rpx;
  height: 20rpx;
  background: rgba(255, 215, 0, 0.5);
}

.dial-pointer {
  width: 4rpx;
  height: 40rpx;
  background: #FFD700;
  margin: 0 auto 16rpx;
  box-shadow: 0 0 10rpx #FFD700;
}

.frequency-text {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #FFD700;
  font-family: 'DIN Alternate', monospace;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

.radio-title {
  display: block;
  text-align: center;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFD700;
  margin-bottom: 8rpx;
  font-family: 'Songti SC', serif;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.radio-subtitle {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 215, 0, 0.8);
}

/* 当前播放 */
.now-playing {
  margin-bottom: 40rpx;
}

.playing-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.playing-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
}

.playing-info {
  margin-bottom: 32rpx;
}

.playing-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.playing-artist {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 16rpx;
}

.playing-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
}

.playing-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 32rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-btn::after {
  border: none;
}

.control-btn.main {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #D32F2F 100%);
  font-size: 48rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 77, 79, 0.4);
}

/* 播放列表 */
.playlist-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 24rpx;
}

.playlist {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.playlist-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.playlist-item.active {
  border-color: #FFD700;
  background: rgba(255, 215, 0, 0.1);
}

.playlist-item:active {
  transform: scale(0.98);
}

.item-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-artist {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.item-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
}

.item-category {
  color: #FFD700;
}

.item-duration {
  color: rgba(255, 255, 255, 0.5);
}

.item-status {
  flex-shrink: 0;
}

.playing-icon {
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  height: 40rpx;
}

.playing-icon .bar {
  width: 6rpx;
  background: #FFD700;
  border-radius: 3rpx;
}

.playing-icon .bar:nth-child(1) {
  height: 20rpx;
}

.playing-icon .bar:nth-child(2) {
  height: 30rpx;
}

.playing-icon .bar:nth-child(3) {
  height: 15rpx;
}

.playing-icon.animating .bar {
  animation: wave 1s infinite ease-in-out;
}

.playing-icon.animating .bar:nth-child(1) {
  animation-delay: 0s;
}

.playing-icon.animating .bar:nth-child(2) {
  animation-delay: 0.2s;
}

.playing-icon.animating .bar:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% {
    height: 20rpx;
  }
  50% {
    height: 40rpx;
  }
}
