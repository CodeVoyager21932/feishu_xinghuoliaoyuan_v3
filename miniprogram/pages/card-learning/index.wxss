/* 卡片学习页面样式 */
.card-learning-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5E5 0%, #FAFAFA 30%);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

/* 进度条 */
.progress-bar {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-red);
}

.progress-track {
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-red) 0%, #EF5350 100%);
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 卡片容器 */
.card-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 24rpx;
}

.card-stack {
  width: 100%;
  height: 600rpx;
  position: relative;
}

/* 卡片 */
.card {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: transform 0.3s, opacity 0.3s;
  transform-style: preserve-3d;
  cursor: pointer;
}

.card.swiping {
  transition: none;
}

.card.flipped {
  transform: rotateY(180deg);
}

.next-card {
  transform: scale(0.95) translateY(20rpx);
  opacity: 0.5;
  z-index: 0;
}

/* 卡片正面 */
.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 24rpx;
  overflow: hidden;
}

.card-front {
  display: flex;
  flex-direction: column;
}

.card-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: linear-gradient(135deg, var(--gold) 0%, #FFA000 100%);
  color: #FFFFFF;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  z-index: 1;
}

.card-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.card-title {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  padding: 32rpx;
  text-align: center;
}

.flip-hint {
  padding: 16rpx;
  text-align: center;
  background: #FFF3E0;
  border-top: 1rpx solid #FFE082;
}

.flip-hint text {
  font-size: 22rpx;
  color: #F57C00;
}

/* 卡片背面 */
.card-back {
  transform: rotateY(180deg);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-content {
  flex: 1;
  overflow-y: auto;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-primary);
}

.card-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 24rpx 0;
}

.keyword {
  background: #E3F2FD;
  color: #1976D2;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.ai-detail-btn {
  background: linear-gradient(135deg, var(--primary-red) 0%, #EF5350 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
}

/* 滑动提示 */
.swipe-hint {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  font-size: 48rpx;
  font-weight: 600;
  opacity: 0;
  transition: opacity 0.3s;
}

.swipe-hint.left {
  left: 32rpx;
  color: #F44336;
}

.swipe-hint.right {
  right: 32rpx;
  color: #4CAF50;
}

.swipe-hint.show {
  opacity: 1;
}

.swipe-hint text:last-child {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 24rpx;
}

.empty-icon {
  font-size: 120rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.review-btn {
  background: var(--primary-red);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
  margin-top: 24rpx;
}

/* 底部操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.review-btn-bottom {
  background: linear-gradient(135deg, #F44336 0%, #E53935 100%);
  color: #FFFFFF;
}

.flip-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #FFFFFF;
}

.master-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
  color: #FFFFFF;
}

.btn-icon {
  font-size: 48rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 统计面板 */
.stats-panel {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--primary-red);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 加载提示 */
.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider);
  border-top-color: var(--primary-red);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading text {
  font-size: 24rpx;
  color: var(--text-secondary);
}
