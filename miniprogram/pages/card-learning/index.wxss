/* 卡片学习页面样式 */
.card-learning-page {
  height: 100vh;
  background: #FDFBF7;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 50% 30%, rgba(255, 215, 0, 0.05) 0%, transparent 60%),
    radial-gradient(circle at 10% 90%, rgba(211, 47, 47, 0.05) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 顶部进度 (Glassmorphism) */
.progress-bar-glass {
  margin: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 20rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 10;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  display: flex;
  align-items: center;
}

.icon-fire {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--primary-red);
  font-family: 'DIN Alternate', sans-serif;
}

.progress-track {
  height: 12rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 6rpx;
  transition: width 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 0 8rpx rgba(211, 47, 47, 0.3);
}

/* 卡片容器 */
.card-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  padding-bottom: 120rpx; /* Space for action bar */
}

.card-stack {
  width: 620rpx;
  height: 880rpx;
  position: relative;
}

/* 卡片 */
.card {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), opacity 0.3s;
  transform-style: preserve-3d;
  cursor: pointer;
  background: #FFFFFF;
}

.card.swiping {
  transition: none;
}

.card.flipped {
  transform: rotateY(180deg);
}

.next-card {
  transform: scale(0.92) translateY(40rpx);
  opacity: 0.6;
  z-index: -1;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 卡片正面 */
.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 40rpx;
  overflow: hidden;
  background: #FFFFFF;
}

.card-front {
  display: flex;
  flex-direction: column;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0) 100%);
  pointer-events: none;
}

.card-content-front {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.card-badge {
  background: rgba(255, 215, 0, 0.9);
  color: #3E2723;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(4px);
}

.card-title-wrapper {
  width: 100%;
}

.card-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.2;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.tap-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-top: 16rpx;
}

/* 卡片背面 */
.card-back {
  transform: rotateY(180deg);
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
}

.card-header-back {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.card-title-small {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  flex: 1;
  margin-right: 24rpx;
}

.ai-btn {
  display: flex;
  align-items: center;
  background: rgba(211, 47, 47, 0.08);
  color: var(--primary-red);
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.icon-ai {
  margin-right: 8rpx;
}

.card-scroll-content {
  flex: 1;
  overflow-y: auto;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-primary);
  text-align: justify;
}

.card-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 40rpx;
}

.keyword {
  background: rgba(0, 0, 0, 0.03);
  color: var(--text-secondary);
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 滑动提示 Overlay */
.swipe-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
  pointer-events: none;
  z-index: 10;
}

.swipe-overlay.left {
  background: rgba(244, 67, 54, 0.1);
}

.swipe-overlay.right {
  background: rgba(76, 175, 80, 0.1);
}

.swipe-overlay.show {
  opacity: 1;
}

.swipe-icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: transform 0.2s;
}

.swipe-overlay.show .swipe-icon-wrapper {
  transform: scale(1);
}

.swipe-icon-wrapper.review {
  background: #F44336;
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.3);
}

.swipe-icon-wrapper.master {
  background: #4CAF50;
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.swipe-icon {
  font-size: 80rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.swipe-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  padding: 60rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.empty-emoji {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

.review-btn {
  background: var(--gradient-primary);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 64rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(211, 47, 47, 0.3);
}

/* 底部操作按钮 (Floating) */
.action-bar {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 40rpx;
  z-index: 20;
}

.action-btn {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.review {
  color: #F44336;
}

.action-btn.flip {
  color: #2196F3;
  transform: translateY(-20rpx); /* Slightly higher */
  width: 90rpx;
  height: 90rpx;
}

.action-btn.master {
  color: #4CAF50;
}

.icon-action {
  font-size: 48rpx;
  font-weight: 700;
}

.action-btn.flip .icon-action {
  font-size: 40rpx;
}

/* 统计面板 (Mini) */
.stats-mini {
  position: absolute;
  top: 180rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 5;
}

.stat-pill {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 140rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.stat-num {
  font-size: 24rpx;
  font-weight: 700;
}

.master-color { color: #4CAF50; }
.review-color { color: #F44336; }

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translate(-50%, 40rpx); }
  to { opacity: 1; transform: translate(-50%, 0); }
}
