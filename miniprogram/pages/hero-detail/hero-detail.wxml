<view class="container" wx:if="{{!loading && hero}}">
  <!-- 英雄头像和基本信息 -->
  <view class="hero-header">
    <image class="hero-avatar" src="{{hero.avatar}}" mode="aspectFill" />
    <view class="hero-basic">
      <view class="hero-name">{{hero.name}}</view>
      <view class="hero-title">{{hero.title}}</view>
      <view class="hero-years">{{hero.birth_year}} - {{hero.death_year}}</view>
      <view class="hero-era">{{hero.era_name}}</view>
    </view>
  </view>

  <!-- 生平简介 -->
  <view class="section">
    <view class="section-title">生平简介</view>
    <view class="biography">{{hero.biography}}</view>
  </view>

  <!-- 主要事迹 -->
  <view class="section">
    <view class="section-title">主要事迹</view>
    <view class="deeds-list">
      <view wx:for="{{hero.main_deeds}}" wx:key="index" class="deed-item">
        {{item}}
      </view>
    </view>
  </view>

  <!-- 名言警句 -->
  <view class="section">
    <view class="section-title">名言警句</view>
    <view class="quotes-list">
      <view wx:for="{{hero.famous_quotes}}" wx:key="index" class="quote-item">
        "{{item}}"
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="actions">
    <button class="action-btn" bindtap="goToChat">与英雄对话</button>
  </view>
</view>

<!-- 加载状态 -->
<view wx:if="{{loading}}" class="loading">
  <text>加载中...</text>
</view>
