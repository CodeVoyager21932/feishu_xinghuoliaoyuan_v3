/* 英雄详情页面样式 */
.hero-detail-page {
  min-height: 100vh;
  background: #FDFBF7;
  position: relative;
}

/* 沉浸式头部 */
.hero-header-immersive {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  filter: blur(20px) brightness(0.8);
  transform: scale(1.1);
}

.hero-header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.hero-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: flex-end;
  z-index: 1;
  background: linear-gradient(to top, #FDFBF7 0%, rgba(253, 251, 247, 0.8) 20%, transparent 100%);
}

.hero-avatar-wrapper {
  width: 180rpx;
  height: 220rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-right: 32rpx;
  flex-shrink: 0;
  background: #E0E0E0;
}

.hero-avatar {
  width: 100%;
  height: 100%;
}

.hero-title-group {
  flex: 1;
  margin-bottom: 16rpx;
}

.hero-name {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.5);
}

.hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.badge-era {
  background: var(--primary-red);
  color: #FFFFFF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.badge-title {
  background: rgba(0, 0, 0, 0.05);
  color: var(--text-secondary);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.hero-years {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-family: 'DIN Alternate', sans-serif;
}

/* 内容区域 */
.content-scroll {
  padding: 24rpx 32rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

.content-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

/* 生平事迹 */
.biography-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-primary);
  text-align: justify;
  text-indent: 2em;
}

/* 主要贡献 */
.deeds-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.deed-pill {
  display: flex;
  align-items: center;
  background: rgba(211, 47, 47, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: var(--primary-red);
  border: 1rpx solid rgba(211, 47, 47, 0.1);
}

.icon-star {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* 名言警句 */
.quotes-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.quote-card {
  position: relative;
  background: #FAFAFA;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  text-align: center;
}

.quote-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--text-primary);
  font-style: italic;
}

.quote-mark {
  position: absolute;
  font-size: 60rpx;
  color: rgba(211, 47, 47, 0.2);
  font-family: serif;
}

.quote-mark.left {
  top: 10rpx;
  left: 20rpx;
}

.quote-mark.right {
  bottom: -20rpx;
  right: 20rpx;
}

/* 底部操作栏 (Floating Glass) */
.action-bar-glass {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 100rpx;
  padding: 16rpx;
  display: flex;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn.secondary {
  color: var(--text-primary);
  margin-right: 16rpx;
}

.action-btn.primary {
  background: var(--gradient-primary);
  color: #FFFFFF;
  flex: 1.5;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.3);
}

.icon-share, .icon-chat {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
