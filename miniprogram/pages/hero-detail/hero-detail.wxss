/* 英雄详情页面样式 */
.hero-detail-page {
  min-height: 100vh;
  background: #FAFAFA;
  padding-bottom: 160rpx;
}

/* 顶部英雄卡片 */
.hero-header {
  background: linear-gradient(135deg, #D32F2F 0%, #C62828 100%);
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
}

.hero-avatar-large {
  width: 160rpx;
  height: 160rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.hero-avatar-large image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: #E0E0E0;
}

.hero-basic-info {
  flex: 1;
  color: #FFFFFF;
}

.hero-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.hero-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.hero-years {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

.era-badge {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 内容区块 */
.section {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 生平事迹 */
.biography-text {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #424242;
  text-align: justify;
  text-indent: 2em;
}

/* 主要贡献 */
.deeds-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.deed-item {
  display: flex;
  align-items: center;
  background: #FFF3E0;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #E65100;
}

.deed-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF9800;
  border-radius: 50%;
  margin-right: 12rpx;
}

/* 名言警句 */
.quotes-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.quote-item {
  position: relative;
  background: #F5F5F5;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #D32F2F;
}

.quote-mark {
  display: inline;
  font-size: 48rpx;
  color: #D32F2F;
  opacity: 0.3;
  font-family: Georgia, serif;
  line-height: 1;
}

.quote-text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #424242;
  font-style: italic;
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.action-btn.primary {
  background: #D32F2F;
  color: #FFFFFF;
}

.action-btn.primary:active {
  background: #C62828;
}

.action-btn.secondary {
  background: transparent;
  color: #D32F2F;
  border: 2rpx solid #D32F2F;
}

.action-btn.secondary:active {
  background: #FFEBEE;
}
