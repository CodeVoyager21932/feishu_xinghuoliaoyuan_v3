.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.hero-header {
  background: white;
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.hero-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 32rpx;
  background: #f0f0f0;
}

.hero-basic {
  flex: 1;
}

.hero-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.hero-title {
  font-size: 28rpx;
  color: #D32F2F;
  margin-bottom: 8rpx;
}

.hero-years {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.hero-era {
  font-size: 24rpx;
  color: #999;
}

.section {
  background: white;
  margin-top: 20rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #D32F2F;
}

.biography {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666;
  text-align: justify;
}

.deeds-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.deed-item {
  padding: 16rpx 24rpx;
  background: #FFF3E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #E65100;
}

.quotes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quote-item {
  padding: 24rpx;
  background: #F5F5F5;
  border-left: 6rpx solid #D32F2F;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
  font-style: italic;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
}

.action-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #D32F2F 0%, #B71C1C 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
}
