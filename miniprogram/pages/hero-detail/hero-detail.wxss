/* 英雄详情页面样式 */
.hero-detail-page {
  min-height: 100vh;
  background: #FDFBF7;
  position: relative;
}

/* 沉浸式头部 */
.hero-header-immersive {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  filter: blur(20px) brightness(0.8);
  transform: scale(1.1);
}

.hero-header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.hero-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: flex-end;
  z-index: 1;
  background: linear-gradient(to top, #FDFBF7 0%, rgba(253, 251, 247, 0.8) 20%, transparent 100%);
}

.hero-avatar-wrapper {
  width: 180rpx;
  height: 220rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-right: 32rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.hero-avatar {
  width: 100%;
  height: 100%;
}

.hero-title-group {
  flex: 1;
  margin-bottom: 16rpx;
}

.hero-name {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.5);
}

.hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.badge-era {
  background: var(--primary-red);
  color: #FFFFFF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.badge-title {
  background: rgba(0, 0, 0, 0.05);
  color: var(--text-secondary);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.hero-years {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-family: 'DIN Alternate', sans-serif;
}

/* 内容区域 */
.content-scroll {
  padding: 24rpx 32rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

.content-card {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-card);
  border: 1rpx solid var(--glass-border);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

/* 生平事迹 */
.text-justified-container {
  text-align: justify;
  text-justify: inter-ideograph;
}

.biography-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-primary);
  text-indent: 2em;
  display: block;
}

/* 主要贡献 (勋章样式) */
.deeds-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.deed-medal {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.15);
  transition: transform 0.2s;
}

.deed-medal:active {
  transform: scale(0.98);
}

.medal-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 2rpx rgba(0,0,0,0.1));
}

.medal-text {
  font-size: 28rpx;
  color: #8D6E63;
  font-weight: 600;
}

/* 名言警句 (杂志风格) */
.quotes-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.quote-magazine-style {
  position: relative;
  padding: 40rpx 20rpx;
  text-align: center;
  border-top: 1rpx solid rgba(0,0,0,0.05);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.quote-content {
  font-size: 36rpx;
  line-height: 1.6;
  color: var(--text-primary);
  font-style: italic;
  position: relative;
  z-index: 1;
}

.quote-symbol-large {
  position: absolute;
  font-size: 120rpx;
  color: rgba(211, 47, 47, 0.08);
  font-family: serif;
  line-height: 1;
  z-index: 0;
}

.quote-symbol-large.left {
  top: -20rpx;
  left: 0;
}

.quote-symbol-large.right {
  bottom: -60rpx;
  right: 0;
}

/* 底部安全区 */
.safe-bottom-spacer {
  height: calc(180rpx + env(safe-area-inset-bottom));
  width: 100%;
}

/* 底部操作栏 (Floating Glass) */
.action-bar-glass {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border-radius: 100rpx;
  padding: 16rpx;
  display: flex;
  box-shadow: var(--glass-shadow);
  border: 1rpx solid var(--glass-border);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn.secondary {
  color: var(--text-primary);
  margin-right: 16rpx;
}

.action-btn.primary {
  background: var(--gradient-primary);
  color: #FFFFFF;
  flex: 1.5;
  box-shadow: 0 4rpx 16rpx rgba(211, 47, 47, 0.3);
}

.icon-share, .icon-chat {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
