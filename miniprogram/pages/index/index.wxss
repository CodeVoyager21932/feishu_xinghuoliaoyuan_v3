/* pages/index/index.wxss */
.home-page {
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
  overflow-x: hidden;
}

/* 顶部背景装饰 (Curtain Effect) */
.header-curtain {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  background: linear-gradient(180deg, #D32F2F 0%, #F7F8FA 100%);
  border-radius: 0 0 40rpx 40rpx;
  z-index: 0;
  opacity: 0.08;
}

/* 顶部用户信息 */
.header {
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info-glass {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.65);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 100rpx;
  padding: 24rpx 40rpx; /* 增加内边距 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

/* Section Title */
.section-title {
  padding: 20rpx 40rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title .font-serif {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-primary);
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

/* 标题下划线装饰 */
.section-title .font-serif::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 0;
  width: 100%;
  height: 12rpx;
  background: rgba(211, 47, 47, 0.15);
  z-index: -1;
  border-radius: 4rpx;
}

.date-badge {
  font-size: 24rpx;
  color: var(--accent-gold);
  font-weight: 600;
  background: rgba(197, 160, 101, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(197, 160, 101, 0.2);
}



/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.grid-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.2s;
}

@supports (backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px)) {
  .grid-item {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
}

@supports not ((backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px))) {
  .grid-item {
    background: rgba(255, 255, 255, 0.98);
  }
}

.grid-item:active {
  transform: scale(0.96);
}

.icon-wrapper {
  width: 110rpx;
  height: 110rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 新配色方案 */
.gradient-red { background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); } /* 保持粉红，适合AI */
.gradient-blue { background: linear-gradient(135deg, #E0C3FC 0%, #8EC5FC 100%); } /* 淡雅蓝紫 */
.gradient-gold { background: linear-gradient(135deg, #F6D365 0%, #FDA085 100%); } /* 暖金 */
.gradient-purple { background: linear-gradient(135deg, #B721FF 0%, #21D4FD 100%); } /* 鲜亮对比 */

/* 针对特定入口微调颜色以符合“国潮” */
.grid-item:nth-child(1) .icon-wrapper { background: linear-gradient(135deg, #FFECEC 0%, #FFD6D6 100%); } /* AI: 浅赤 */
.grid-item:nth-child(2) .icon-wrapper { background: linear-gradient(135deg, #E8F4F8 0%, #D4EBF3 100%); } /* 图谱: 浅青 */
.grid-item:nth-child(3) .icon-wrapper { background: linear-gradient(135deg, #FFF8E1 0%, #FFE082 100%); } /* 卡片: 浅金 */
.grid-item:nth-child(4) .icon-wrapper { background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%); } /* 长廊: 浅紫 */

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  display: block;
}

