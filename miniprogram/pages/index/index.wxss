.grid-label {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  /* 移除衬线字体，使用系统默认 */
}

.grid-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.8;
}

/* 学习统计 */
.stats-section {
  padding: 0 32rpx;
}

.stats-card {
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  position: relative;
  overflow: hidden;
}

/* 装饰性背景纹理 */
.stats-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(197, 160, 101, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  position: relative;
  z-index: 1;
}

.level-badge {
  font-size: 24rpx;
  color: #FFFFFF;
  background: var(--text-primary);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 52rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', sans-serif;
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 6rpx;
  color: var(--text-secondary);
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-hint);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 新增渐变色 */
.gradient-orange { background: linear-gradient(135deg, #FFB74D 0%, #FF9800 100%); }
.gradient-cyan { background: linear-gradient(135deg, #4DD0E1 0%, #00BCD4 100%); }

/* 新增入口样式 */
.grid-item:nth-child(5) .icon-wrapper { background: linear-gradient(135deg, #FFE5CC 0%, #FFCC99 100%); }
.grid-item:nth-child(6) .icon-wrapper { background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%); }

/* PK对战入口样式 */
.gradient-pink { background: linear-gradient(135deg, #F093FB 0%, #F5576C 100%); }
.grid-item:nth-child(7) .icon-wrapper { background: linear-gradient(135deg, #FFE5F1 0%, #FFD6E8 100%); }

/* 红色电台入口样式 */
.gradient-brown { background: linear-gradient(135deg, #D4A574 0%, #8B4513 100%); }
.grid-item:nth-child(8) .icon-wrapper { background: linear-gradient(135deg, #F5E6D3 0%, #E8D4B8 100%); }

/* Floating Action Button (FAB) */
.fab-daily-sign {
  position: fixed;
  bottom: 160rpx; /* Above tab bar */
  right: 32rpx;
  background: var(--gradient-primary);
  color: #FFFFFF;
  border-radius: 100rpx;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 32rpx rgba(211, 47, 47, 0.4);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.fab-daily-sign:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.3);
}

.fab-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.fab-text {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
