/* pages/index/index.wxss */
.home-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5E5 0%, #FAFAFA 30%);
  padding-bottom: 120rpx;
}

/* 顶部用户信息 */
.header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: transparent;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  flex: 1;
  margin-left: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
}

.check-in-btn {
  background: linear-gradient(135deg, #D32F2F 0%, #EF5350 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
}

.check-in-btn[disabled] {
  background: #E0E0E0;
  color: #9E9E9E;
  box-shadow: none;
}

/* 今日英雄卡片 */
.today-hero-card {
  position: relative;
  margin: 24rpx 32rpx;
  padding: 0;
  overflow: hidden;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F8 100%);
  border: 2rpx solid #FFE5E5;
}

.hero-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA000 100%);
  color: #FFFFFF;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  z-index: 1;
}

.hero-avatar-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #FFE5E5 0%, #FFCDD2 100%);
}

.hero-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #D32F2F 0%, #C62828 100%);
}

.placeholder-text {
  font-size: 72rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.hero-info {
  padding: 32rpx;
}

.hero-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #D32F2F;
  margin-bottom: 12rpx;
}

.hero-desc {
  display: block;
  font-size: 28rpx;
  color: #757575;
}

/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding: 24rpx 32rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.grid-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.grid-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.icon-emoji {
  font-size: 64rpx;
  margin-bottom: 12rpx;
}

.grid-item text {
  font-size: 24rpx;
  color: #212121;
}

/* 学习统计卡片 */
.stats-card {
  margin: 24rpx 32rpx;
}

.stats-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 24rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #D32F2F;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #757575;
}
