/* pages/index/index.wxss */
.home-page {
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
  overflow-x: hidden;
}

/* 顶部用户信息 */
.header {
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
}

.user-info-glass {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.65);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 100rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

/* 毛玻璃效果（带降级） */
@supports (backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px)) {
  .user-info-glass {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
}

@supports not ((backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px))) {
  .user-info-glass {
    background: rgba(255, 255, 255, 0.95);
  }
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-text {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
  letter-spacing: 1rpx;
}

.nickname {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  /* 移除衬线字体，使用系统默认以保证清晰度 */
}

.daily-sign-btn {
  background: var(--gradient-primary);
  color: #FFFFFF;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(211, 47, 47, 0.25);
  transition: all 0.2s;
}

.daily-sign-btn:active {
  transform: scale(0.95);
}

.icon-calendar {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* Section Title */
.section-title {
  padding: 20rpx 40rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title .font-serif {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-primary);
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

/* 标题下划线装饰 */
.section-title .font-serif::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 0;
  width: 100%;
  height: 12rpx;
  background: rgba(211, 47, 47, 0.15);
  z-index: -1;
  border-radius: 4rpx;
}

.date-badge {
  font-size: 24rpx;
  color: var(--accent-gold);
  font-weight: 600;
  background: rgba(197, 160, 101, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(197, 160, 101, 0.2);
}

/* 今日英雄卡片 (抽卡感) */
.today-hero-card {
  margin: 24rpx 32rpx;
  height: 420rpx;
  border-radius: 48rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 
    var(--shadow-card),
    0 0 0 2rpx rgba(255, 255, 255, 0.5) inset; /* 内发光 */
  background: #FFFFFF;
  background: #FFFFFF;
  transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  transform-style: preserve-3d;
  will-change: transform;
  /* 默认透视 */
  transform: perspective(1000px);
}

.today-hero-card.touching {
  transition: none;
}

.today-hero-card:active {
  /* transform: scale(0.98);  Removed to let JS handle it */
}

.card-glare {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 48rpx;
  z-index: 5;
  pointer-events: none;
  mix-blend-mode: overlay;
  opacity: 0;
  transition: opacity 0.2s;
}

.hero-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 极淡的水墨晕染 */
  background: 
    radial-gradient(circle at 90% 10%, rgba(211, 47, 47, 0.08) 0%, transparent 40%),
    radial-gradient(circle at 10% 90%, rgba(197, 160, 101, 0.08) 0%, transparent 40%),
    #FFFFFF;
  z-index: 0;
}

.hero-content {
  position: relative;
  z-index: 1;
  padding: 40rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.hero-badge {
  align-self: flex-end;
  background: linear-gradient(135deg, #FFD700 0%, #FDB931 100%);
  color: #8B4513;
  padding: 8rpx 24rpx;
  border-radius: 8rpx 24rpx 8rpx 24rpx; /* 异形圆角 */
  font-size: 22rpx;
  font-weight: 800;
  box-shadow: 0 4rpx 12rpx rgba(253, 185, 49, 0.3);
  transform: rotate(2deg); /* 微微倾斜，像贴上去的 */
}

.hero-main {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.hero-avatar-wrapper {
  width: 160rpx;
  height: 200rpx; /* 竖长方形，像照片 */
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: 6rpx solid #FFFFFF;
  margin-right: 40rpx;
  position: relative;
  transform: rotate(-3deg); /* 照片倾斜 */
}

.hero-avatar {
  width: 100%;
  height: 100%;
}

.hero-placeholder {
  width: 100%;
  height: 100%;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  color: #CCCCCC;
  font-size: 60rpx;
  font-weight: 700;
}

.hero-text-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-name {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  /* 使用全局衬线体类 */
  font-family: 'Songti SC', 'Noto Serif SC', 'Source Han Serif CN', 'STSong', 'SimSun', serif;
}

.hero-title {
  font-size: 26rpx;
  color: var(--primary-red);
  background: rgba(211, 47, 47, 0.06);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(211, 47, 47, 0.1);
}

.hero-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.6;
  opacity: 0.8;
}

.hero-footer {
  margin-top: auto;
  display: flex;
  justify-content: flex-end;
}

.tap-hint {
  font-size: 24rpx;
  color: var(--accent-gold);
  font-weight: 500;
  display: flex;
  align-items: center;
}

.tap-hint::after {
  content: '→';
  margin-left: 8rpx;
  transition: transform 0.3s;
}

/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.grid-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.2s;
}

@supports (backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px)) {
  .grid-item {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
}

@supports not ((backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px))) {
  .grid-item {
    background: rgba(255, 255, 255, 0.98);
  }
}

.grid-item:active {
  transform: scale(0.96);
}

.icon-wrapper {
  width: 110rpx;
  height: 110rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 新配色方案 */
.gradient-red { background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); } /* 保持粉红，适合AI */
.gradient-blue { background: linear-gradient(135deg, #E0C3FC 0%, #8EC5FC 100%); } /* 淡雅蓝紫 */
.gradient-gold { background: linear-gradient(135deg, #F6D365 0%, #FDA085 100%); } /* 暖金 */
.gradient-purple { background: linear-gradient(135deg, #B721FF 0%, #21D4FD 100%); } /* 鲜亮对比 */

/* 针对特定入口微调颜色以符合“国潮” */
.grid-item:nth-child(1) .icon-wrapper { background: linear-gradient(135deg, #FFECEC 0%, #FFD6D6 100%); } /* AI: 浅赤 */
.grid-item:nth-child(2) .icon-wrapper { background: linear-gradient(135deg, #E8F4F8 0%, #D4EBF3 100%); } /* 图谱: 浅青 */
.grid-item:nth-child(3) .icon-wrapper { background: linear-gradient(135deg, #FFF8E1 0%, #FFE082 100%); } /* 卡片: 浅金 */
.grid-item:nth-child(4) .icon-wrapper { background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%); } /* 长廊: 浅紫 */

.icon-emoji {
  font-size: 56rpx;
  filter: drop-shadow(0 4rpx 4rpx rgba(0,0,0,0.1));
}

.grid-label {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  /* 移除衬线字体，使用系统默认 */
}

.grid-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.8;
}

/* 学习统计 */
.stats-section {
  padding: 0 32rpx;
}

.stats-card {
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  position: relative;
  overflow: hidden;
}

/* 装饰性背景纹理 */
.stats-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(197, 160, 101, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  position: relative;
  z-index: 1;
}

.level-badge {
  font-size: 24rpx;
  color: #FFFFFF;
  background: var(--text-primary);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 52rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', sans-serif;
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 6rpx;
  color: var(--text-secondary);
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-hint);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 新增渐变色 */
.gradient-orange { background: linear-gradient(135deg, #FFB74D 0%, #FF9800 100%); }
.gradient-cyan { background: linear-gradient(135deg, #4DD0E1 0%, #00BCD4 100%); }

/* 新增入口样式 */
.grid-item:nth-child(5) .icon-wrapper { background: linear-gradient(135deg, #FFE5CC 0%, #FFCC99 100%); }
.grid-item:nth-child(6) .icon-wrapper { background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%); }

/* PK对战入口样式 */
.gradient-pink { background: linear-gradient(135deg, #F093FB 0%, #F5576C 100%); }
.grid-item:nth-child(7) .icon-wrapper { background: linear-gradient(135deg, #FFE5F1 0%, #FFD6E8 100%); }

/* 红色电台入口样式 */
.gradient-brown { background: linear-gradient(135deg, #D4A574 0%, #8B4513 100%); }
.grid-item:nth-child(8) .icon-wrapper { background: linear-gradient(135deg, #F5E6D3 0%, #E8D4B8 100%); }
