/* pages/index/index.wxss */
.home-page {
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
  overflow-x: hidden;
}

/* 背景装饰 (Fluid Blobs) */
.bg-decoration {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(255, 81, 47, 0.15) 0%, rgba(255, 255, 255, 0) 70%);
  border-radius: 50%;
  filter: blur(40px);
  z-index: -1;
}

/* 顶部用户信息 */
.header {
  padding: 24rpx 32rpx;
  margin-bottom: 10rpx;
}

.user-info-glass {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 100rpx; /* Pill shape */
  padding: 12rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-text {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.check-in-btn {
  background: #FFFFFF;
  color: #D32F2F;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.15);
  transition: all 0.3s;
}

.check-in-btn.checked {
  background: #F5F5F5;
  color: #9E9E9E;
  box-shadow: none;
}

.icon-check {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* Section Title */
.section-title {
  padding: 20rpx 40rpx 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.section-title .font-serif {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.date-badge {
  font-size: 24rpx;
  color: var(--text-hint);
  font-weight: 500;
  background: rgba(0, 0, 0, 0.03);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 今日英雄卡片 */
.today-hero-card {
  margin: 24rpx 32rpx;
  height: 380rpx;
  border-radius: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(211, 47, 47, 0.15);
  background: #FFFFFF;
}

.hero-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(120deg, rgba(255, 245, 245, 1) 0%, rgba(255, 255, 255, 1) 60%);
  z-index: 0;
}

.hero-content {
  position: relative;
  z-index: 1;
  padding: 32rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.hero-badge {
  align-self: flex-end;
  background: rgba(255, 215, 0, 0.2);
  color: #F57F17;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 700;
  border: 1rpx solid rgba(255, 215, 0, 0.3);
}

.hero-main {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.hero-avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #FFFFFF;
  margin-right: 32rpx;
  position: relative;
}

.hero-avatar {
  width: 100%;
  height: 100%;
}

.hero-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  color: rgba(211, 47, 47, 0.3);
  font-size: 60rpx;
  font-weight: 700;
}

.hero-text-group {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.hero-name {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.hero-title {
  font-size: 26rpx;
  color: var(--primary-red);
  background: rgba(211, 47, 47, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  margin-bottom: 12rpx;
}

.hero-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.hero-footer {
  margin-top: auto;
  display: flex;
  justify-content: flex-end;
}

.tap-hint {
  font-size: 22rpx;
  color: var(--text-hint);
}

/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.grid-item {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.gradient-red { background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); }
.gradient-blue { background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); }
.gradient-gold { background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); }
.gradient-purple { background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%); }

.icon-emoji {
  font-size: 50rpx;
}

.grid-label {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.grid-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 学习统计 */
.stats-section {
  padding: 0 32rpx;
}

.stats-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.level-badge {
  font-size: 22rpx;
  color: #FFFFFF;
  background: var(--text-primary);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', sans-serif; /* 数字字体 */
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 4rpx;
  color: var(--text-secondary);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-hint);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #F0F0F0;
}
