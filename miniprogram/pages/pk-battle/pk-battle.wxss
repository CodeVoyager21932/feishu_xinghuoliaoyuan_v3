/* pages/pk-battle/pk-battle.wxss */
.pk-battle-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #667EEA 0%, #764BA2 100%);
}

/* 答题模式 */
.quiz-mode {
  min-height: 100vh;
  padding: 180rpx 32rpx 120rpx;
}

.quiz-header {
  margin-bottom: 40rpx;
}

.timer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  margin-bottom: 24rpx;
}

.timer.warning {
  background: rgba(255, 77, 79, 0.3);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.timer-icon {
  font-size: 32rpx;
}

.timer-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.progress-bar {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700 0%, #FFA500 100%);
  transition: width 0.3s;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.question-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.question-text {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1F1F1F;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 3rpx solid transparent;
  transition: all 0.2s;
}

.option-item.selected {
  border-color: #667EEA;
  background: rgba(102, 126, 234, 0.1);
}

.option-item.correct {
  border-color: #52C41A;
  background: rgba(82, 196, 26, 0.1);
}

.option-item.wrong {
  border-color: #FF4D4F;
  background: rgba(255, 77, 79, 0.1);
}

.option-label {
  width: 48rpx;
  height: 48rpx;
  background: #667EEA;
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.option-item.correct .option-label {
  background: #52C41A;
}

.option-item.wrong .option-label {
  background: #FF4D4F;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #1F1F1F;
  line-height: 1.5;
}

.option-icon {
  font-size: 32rpx;
  font-weight: 700;
}

.option-icon text {
  color: #52C41A;
}

.option-item.wrong .option-icon text {
  color: #FF4D4F;
}

.explanation {
  background: rgba(102, 126, 234, 0.05);
  border-left: 6rpx solid #667EEA;
  border-radius: 8rpx;
  padding: 24rpx;
}

.explanation-label {
  display: block;
  font-size: 24rpx;
  color: #667EEA;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.explanation-text {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.quiz-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, transparent 0%, rgba(102, 126, 234, 0.95) 20%);
}

.btn-next {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #8B4513;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(255, 215, 0, 0.4);
}

.btn-next::after {
  border: none;
}

/* 结算页面 */
.result-mode {
  min-height: 100vh;
  padding: 180rpx 32rpx 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-header {
  text-align: center;
  margin-bottom: 60rpx;
  animation: bounceIn 0.6s;
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.result-header.win .result-title {
  font-size: 80rpx;
  color: #FFD700;
  text-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.5);
}

.result-header.lose .result-title {
  font-size: 64rpx;
  color: rgba(255, 255, 255, 0.9);
}

.result-title {
  display: block;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.result-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.score-comparison {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.player-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.player-name {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.score-value {
  font-size: 64rpx;
  font-weight: 700;
  color: #FFD700;
}

.score-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.vs-divider {
  margin: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.vs-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.score-bars {
  width: 100%;
  display: flex;
  gap: 8rpx;
}

.score-bar {
  height: 12rpx;
  border-radius: 6rpx;
  transition: width 0.6s;
}

.my-bar {
  background: linear-gradient(90deg, #52C41A 0%, #73D13D 100%);
}

.opponent-bar {
  background: linear-gradient(90deg, #FF4D4F 0%, #FF7875 100%);
}

.medal-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 40rpx;
  animation: rotate 2s infinite;
}

@keyframes rotate {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

.medal-icon {
  font-size: 120rpx;
}

.medal-text {
  font-size: 32rpx;
  color: #FFD700;
  font-weight: 700;
}

.answer-details {
  width: 100%;
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.detail-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.result-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-actions button {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.result-actions button::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #FF4D4F 0%, #D32F2F 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(255, 77, 79, 0.4);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.btn-icon {
  font-size: 32rpx;
}
