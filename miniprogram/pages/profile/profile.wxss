/* 个人中心页面样式 */
.profile-page {
  min-height: 100vh;
  background: #FAFAFA;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #D32F2F 0%, #C62828 100%);
  padding: 60rpx 32rpx 40rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
  color: #FFFFFF;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 统计区域 */
.stats-section {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 24rpx;
}

.achievement-count {
  font-size: 24rpx;
  color: #757575;
  font-weight: 400;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #D32F2F;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #757575;
}

/* 成就徽章 */
.achievements-section {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.achievements-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.achievement-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.achievement-item.unlocked {
  background: #FFF3E0;
}

.achievement-item.locked {
  background: #F5F5F5;
  opacity: 0.6;
}

.achievement-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.achievement-name {
  font-size: 22rpx;
  color: #424242;
  text-align: center;
  margin-bottom: 4rpx;
}

.achievement-progress {
  font-size: 20rpx;
  color: #757575;
}

/* 打卡日历 */
.records-section {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
}

.calendar-day {
  position: relative;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.calendar-day.checked {
  background: #D32F2F;
}

.day-number {
  font-size: 24rpx;
  color: #757575;
}

.calendar-day.checked .day-number {
  color: #FFFFFF;
}

.check-mark {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  font-size: 16rpx;
  color: #FFFFFF;
}

/* 设置区域 */
.settings-section {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
  font-size: 28rpx;
  color: #424242;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #F5F5F5;
}

.arrow {
  font-size: 36rpx;
  color: #BDBDBD;
}
