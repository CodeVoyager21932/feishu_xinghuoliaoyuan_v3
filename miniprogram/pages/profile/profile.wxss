/* 个人中心页面样式 */
.profile-page {
  min-height: 100vh;
  background: #FDFBF7;
  padding-bottom: 60rpx;
  position: relative;
  overflow-x: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background: linear-gradient(180deg, rgba(255, 215, 0, 0.1) 0%, rgba(255, 255, 255, 0) 100%);
  z-index: 0;
  pointer-events: none;
}

/* 用户信息卡片 (Glassmorphism) */
.user-card-glass {
  margin: 32rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 1;
}

.user-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.level-badge {
  position: absolute;
  bottom: 0;
  right: -10rpx;
  background: var(--gradient-gold);
  color: #3E2723;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  border: 2rpx solid #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-text {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.edit-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.03);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
}

.stats-overview {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  padding: 24rpx;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-red);
  font-family: 'DIN Alternate', sans-serif;
}

.overview-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

.divider-vertical {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.05);
}

/* 通用区块样式 */
.section-container {
  margin: 0 32rpx 32rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.section-action {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.achievement-count {
  margin-right: 8rpx;
  color: var(--primary-red);
  font-weight: 600;
}

/* 成就徽章 */
.achievements-scroll {
  display: flex;
  padding-bottom: 20rpx; /* Space for shadow */
}

.achievement-card {
  flex-shrink: 0;
  width: 200rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  transition: all 0.3s;
}

.achievement-card:last-child {
  margin-right: 0;
}

.achievement-card.locked {
  background: #F5F5F5;
  opacity: 0.7;
}

.achievement-card.unlocked {
  background: #FFFFFF;
  border-color: rgba(255, 215, 0, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(255, 215, 0, 0.1);
}

.achievement-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.03);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.achievement-card.unlocked .achievement-icon-wrapper {
  background: var(--gradient-gold);
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.3);
}

.achievement-icon {
  font-size: 48rpx;
}

.achievement-card.locked .achievement-icon {
  filter: grayscale(100%);
  opacity: 0.5;
}

.achievement-name {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 8rpx;
}

.progress-bar-mini {
  width: 100%;
  height: 6rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
  overflow: hidden;
  margin-top: 8rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-red);
  border-radius: 3rpx;
}

/* 打卡日历 */
.calendar-grid {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.calendar-header-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.calendar-days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: var(--text-primary);
  position: relative;
}

.calendar-day.checked {
  background: rgba(211, 47, 47, 0.05);
  color: var(--primary-red);
  font-weight: 600;
}

.check-dot {
  width: 8rpx;
  height: 8rpx;
  background: var(--primary-red);
  border-radius: 50%;
  position: absolute;
  bottom: 12rpx;
}

/* 设置列表 */
.settings-list {
  margin: 0 32rpx 40rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 0 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
}

.setting-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.icon-arrow {
  font-size: 32rpx;
  color: var(--text-hint);
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 22rpx;
  color: var(--text-hint);
  margin-top: 40rpx;
}

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
