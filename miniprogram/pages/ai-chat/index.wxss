/* AI对话页面样式 */
.chat-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--background);
}

/* 顶部导航 */
.chat-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--divider);
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ai-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.ai-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.switch-mode-btn {
  padding: 12rpx 24rpx;
  background: var(--primary-red);
  color: #fff;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.message-welcome {
  background: #FFF3E0;
  border-left: 4rpx solid var(--gold);
  padding: 24rpx;
  margin-bottom: 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
}

.message-item {
  display: flex;
  margin-bottom: 32rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-item.user {
  flex-direction: row-reverse;
}

.message-item .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.message-item.user .avatar {
  margin-left: 16rpx;
}

.message-item.assistant .avatar {
  margin-right: 16rpx;
}

.bubble {
  max-width: 500rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.message-item.user .bubble {
  background: var(--primary-red);
  color: #fff;
  border-top-right-radius: 4rpx;
}

.message-item.assistant .bubble {
  background: #fff;
  color: var(--text-primary);
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.bubble .content {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
}

.bubble .time {
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.6;
  align-self: flex-end;
}

/* 加载动画 */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.loading {
  display: flex;
  gap: 12rpx;
}

.loading .dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-red);
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading .dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading .dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 输入框 */
.input-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-top: 1rpx solid var(--divider);
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.input {
  flex: 1;
  background: var(--background);
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
  min-height: 80rpx;
  box-sizing: border-box;
}

.send-btn {
  padding: 16rpx 32rpx;
  background: var(--divider);
  color: var(--text-hint);
  border-radius: 32rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s;
}

.send-btn.active {
  background: var(--primary-red);
  color: #fff;
}

.send-btn[disabled] {
  opacity: 0.6;
}

/* 英雄选择弹窗 */
.hero-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.hero-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-height: 70vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.hero-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
}

.hero-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.hero-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: var(--background);
  transition: all 0.3s;
}

.hero-item:active {
  background: var(--divider);
  transform: scale(0.95);
}

.hero-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  border: 3rpx solid var(--primary-red);
}

.hero-name {
  font-size: 24rpx;
  color: var(--text-primary);
  text-align: center;
}
