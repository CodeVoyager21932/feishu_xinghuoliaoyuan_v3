<!-- 英雄长廊页面 -->
<view class="hero-gallery-page">
  <!-- 顶部筛选栏 -->
  <view class="filter-bar">
    <view 
      class="filter-item {{currentEra === 'all' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-era="all"
    >
      <text>全部</text>
    </view>
    <view 
      class="filter-item {{currentEra === '革命时期' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-era="革命时期"
    >
      <text>革命时期</text>
    </view>
    <view 
      class="filter-item {{currentEra === '建设时期' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-era="建设时期"
    >
      <text>建设时期</text>
    </view>
    <view 
      class="filter-item {{currentEra === '改革时期' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-era="改革时期"
    >
      <text>改革时期</text>
    </view>
    <view 
      class="filter-item {{currentEra === '新时代' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-era="新时代"
    >
      <text>新时代</text>
    </view>
  </view>

  <!-- 英雄列表 -->
  <scroll-view class="hero-list" scroll-y>
    <view 
      class="hero-card"
      wx:for="{{filteredHeroes}}"
      wx:key="id"
      bindtap="onHeroClick"
      data-hero="{{item}}"
    >
      <!-- 英雄头像 -->
      <view class="hero-avatar">
        <image src="{{item.avatar}}" mode="aspectFill" lazy-load />
        <view class="era-tag">{{item.era}}</view>
      </view>

      <!-- 英雄信息 -->
      <view class="hero-info">
        <view class="hero-name">{{item.name}}</view>
        <view class="hero-title">{{item.title}}</view>
        <view class="hero-brief">{{item.brief}}</view>
        <view class="hero-years">
          {{item.birth_year}} - {{item.death_year || '至今'}}
        </view>
      </view>

      <!-- 右箭头 -->
      <view class="arrow-icon">›</view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{filteredHeroes.length === 0}}">
      <text>暂无英雄数据</text>
    </view>
  </scroll-view>
</view>