.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.era-filter {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.era-item {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  margin: 0 8rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.era-item.active {
  background: #D32F2F;
  color: white;
}

.hero-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hero-card {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.hero-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.hero-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.hero-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.hero-era {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
