/* 英雄长廊页面样式 */
.hero-gallery-page {
  min-height: 100vh;
  background: #FDFBF7;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background: linear-gradient(180deg, rgba(255, 245, 245, 0.8) 0%, rgba(255, 255, 255, 0) 100%);
  z-index: 0;
}

/* 筛选栏 (Floating Glass) */
.filter-scroll {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-bar {
  display: flex;
  padding: 24rpx 32rpx;
  white-space: nowrap;
}

.filter-item {
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  border-radius: 40rpx;
  background: rgba(0, 0, 0, 0.03);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 1rpx solid transparent;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-item.active {
  background: var(--gradient-primary);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.25);
  transform: translateY(-2rpx);
}

/* 英雄列表 */
.hero-list {
  height: calc(100vh - 110rpx); /* 减去筛选栏高度 */
  position: relative;
  z-index: 1;
}

.list-padding {
  padding: 24rpx 32rpx 60rpx;
}

.hero-card {
  display: flex;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

/* 英雄头像 */
.hero-avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 200rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.hero-avatar {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  transition: transform 0.5s;
}

.hero-card:active .hero-avatar {
  transform: scale(1.05);
}

.era-badge {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #FFFFFF;
  padding: 6rpx 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

/* 英雄信息 */
.hero-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.hero-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.hero-years {
  font-size: 22rpx;
  color: var(--text-hint);
  font-family: 'DIN Alternate', sans-serif;
}

.hero-title-wrapper {
  margin-bottom: 12rpx;
}

.hero-title {
  font-size: 24rpx;
  color: #D32F2F;
  background: rgba(211, 47, 47, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.hero-brief {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 装饰性箭头 */
.card-arrow {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  opacity: 0;
  transform: translateX(-10rpx);
  transition: all 0.3s;
}

.hero-card:active .card-arrow {
  opacity: 1;
  transform: translateX(0);
}

.icon-arrow {
  color: var(--text-hint);
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: var(--text-hint);
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}
