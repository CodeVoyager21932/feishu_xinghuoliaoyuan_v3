/* 知识图谱页面样式 */
.graph-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #FDFBF7;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 80% 10%, rgba(33, 147, 176, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 20% 90%, rgba(211, 47, 47, 0.05) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 顶部控制栏 (Glassmorphism) */
.control-bar-glass {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 10;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
}

.filter-scroll {
  flex: 1;
  margin-right: 24rpx;
  white-space: nowrap;
}

.filter-list {
  display: flex;
  align-items: center;
}

.filter-pill {
  padding: 10rpx 24rpx;
  margin-right: 16rpx;
  background: rgba(0, 0, 0, 0.03);
  color: var(--text-secondary);
  border-radius: 32rpx;
  font-size: 24rpx;
  transition: all 0.3s;
  border: 1rpx solid transparent;
}

.filter-pill.active {
  background: var(--gradient-primary);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.2);
}

.view-toggle {
  display: flex;
  background: rgba(0, 0, 0, 0.03);
  padding: 4rpx;
  border-radius: 16rpx;
}

.toggle-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.toggle-btn.active {
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon-view {
  font-size: 32rpx;
}

/* 内容区域 */
.content-area {
  flex: 1;
  position: relative;
  width: 100%;
  height: 100%;
}

/* 1. 时间轴视图 */
.timeline-view {
  width: 100%;
  height: 100%;
}

.timeline-container {
  padding: 40rpx 32rpx;
  position: relative;
}

.timeline-line {
  position: absolute;
  top: 40rpx;
  bottom: 40rpx;
  left: 60rpx;
  width: 4rpx;
  background: linear-gradient(to bottom, rgba(211, 47, 47, 0.1) 0%, rgba(211, 47, 47, 0.5) 50%, rgba(211, 47, 47, 0.1) 100%);
  z-index: 0;
}

.timeline-item {
  position: relative;
  padding-left: 60rpx;
  margin-bottom: 40rpx;
  z-index: 1;
}

.timeline-dot-wrapper {
  position: absolute;
  left: 0;
  top: 32rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #FFFFFF;
  border: 6rpx solid var(--primary-red);
  box-shadow: 0 0 0 6rpx rgba(211, 47, 47, 0.1);
  z-index: 2;
}

.timeline-dot.person {
  border-color: #1976D2;
  box-shadow: 0 0 0 6rpx rgba(25, 118, 210, 0.1);
}

.timeline-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.timeline-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.node-year {
  font-size: 32rpx;
  font-weight: 600;
  color: #C62828;
  font-family: 'DIN Alternate', sans-serif;
}

.node-type-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(211, 47, 47, 0.08);
  color: var(--primary-red);
}

.node-type-badge.person {
  background: rgba(25, 118, 210, 0.08);
  color: #1976D2;
}

.node-label {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.node-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 2. 知识图谱视图 */
.graph-view {
  width: 100%;
  height: 100%;
  position: relative;
  background: #1a1a1a; /* Dark background for graph */
}

.graph-canvas {
  width: 100%;
  height: 100%;
}

.graph-controls {
  position: absolute;
  bottom: 40rpx;
  right: 32rpx;
}

.control-btn {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  color: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 详情卡片 (Bottom Sheet) */
.detail-card {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.detail-card.show {
  opacity: 1;
  visibility: visible;
}

.card-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  max-height: 70vh;
}

.detail-card.show .card-content {
  transform: translateY(0);
}

.card-header-glass {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.card-close {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: var(--text-secondary);
}

.card-body {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 32rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.info-item {
  background: #FAFAFA;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
}

.info-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 4rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: block;
}

.desc-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  text-align: justify;
}

.ai-btn-large {
  width: 100%;
  background: var(--gradient-primary);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.3);
}

.icon-ai {
  margin-right: 12rpx;
  font-size: 36rpx;
}

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.5s ease-out forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
