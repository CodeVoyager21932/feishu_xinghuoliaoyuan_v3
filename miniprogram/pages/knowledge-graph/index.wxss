/* 知识图谱页面样式 */
.graph-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #FAFAFA;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid var(--divider);
  gap: 16rpx;
  flex-shrink: 0;
}

.filter-btn {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #F5F5F5;
  color: var(--text-secondary);
  border-radius: 32rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.3s;
}

.filter-btn.active {
  background: var(--primary-red);
  color: #FFFFFF;
  font-weight: 600;
}

/* 时间轴列表视图 */
.timeline-view {
  flex: 1;
  width: 100%;
  background: #FFFFFF;
}

.timeline-container {
  padding: 32rpx 24rpx;
}

.timeline-item {
  position: relative;
  padding-left: 60rpx;
  padding-bottom: 48rpx;
  border-left: 4rpx solid #FFE5E5;
  margin-left: 24rpx;
}

.timeline-item:last-child {
  border-left-color: transparent;
}

.timeline-dot {
  position: absolute;
  left: -14rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background: #D32F2F;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 0 0 4rpx #FFE5E5;
}

.timeline-content {
  background: #FAFAFA;
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.timeline-item:active .timeline-content {
  background: #F5F5F5;
  transform: scale(0.98);
}

.node-year {
  font-size: 24rpx;
  color: #D32F2F;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.node-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 12rpx;
}

.node-desc {
  font-size: 26rpx;
  color: #757575;
  line-height: 1.6;
}

/* 操作提示 */
.tips {
  padding: 16rpx 24rpx;
  background: #FFF3E0;
  border-top: 1rpx solid #FFE082;
  text-align: center;
  flex-shrink: 0;
}

.tips text {
  font-size: 22rpx;
  color: #F57C00;
}

/* 详情卡片 */
.detail-card {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.detail-card.show {
  opacity: 1;
  visibility: visible;
}

.card-content {
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-card.show .card-content {
  transform: translateY(0);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--divider);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.card-close {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
  padding: 0 16rpx;
}

.card-body {
  margin-bottom: 24rpx;
}

.info-row {
  margin-bottom: 16rpx;
  display: flex;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  min-width: 100rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary);
  flex: 1;
  line-height: 1.6;
}

.card-footer {
  display: flex;
  justify-content: center;
}

.ai-btn {
  background: linear-gradient(135deg, var(--primary-red) 0%, #EF5350 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
}

/* 加载提示 */
.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider);
  border-top-color: var(--primary-red);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading text {
  font-size: 24rpx;
  color: var(--text-secondary);
}
