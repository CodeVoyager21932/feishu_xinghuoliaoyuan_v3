/* pages/knowledge-graph/index.wxss */
.graph-page {
  min-height: 100vh;
  background: var(--bg-texture-dark); /* 使用深色纹理背景 */
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部控制栏 */
.control-bar-glass {
  position: absolute;
  top: 180rpx; /* 避开自定义导航栏 */
  left: 32rpx;
  right: 32rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  margin-right: 24rpx;
}

.icon-search {
  font-size: 28rpx;
  margin-right: 12rpx;
  opacity: 0.6;
}

.search-input {
  font-size: 28rpx;
  color: #FFFFFF;
  width: 100%;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.view-toggle {
  display: flex;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 24rpx;
  padding: 4rpx;
}

.toggle-item {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  transition: all 0.3s;
}

.toggle-item.active {
  background: var(--primary-neon);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.4);
}

/* 视图容器 */
.view-container {
  flex: 1;
  margin-top: 280rpx; /* 留出顶部空间 */
}

/* 1. 时间轴视图 */
.timeline-scroll {
  height: calc(100vh - 280rpx);
}

.timeline-container {
  padding: 32rpx;
  position: relative;
}

/* 中轴线 */
.timeline-line {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0) 0%, 
    rgba(255, 255, 255, 0.3) 10%, 
    rgba(255, 255, 255, 0.3) 90%, 
    rgba(255, 255, 255, 0) 100%
  );
  transform: translateX(-50%);
}

.timeline-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 64rpx;
  position: relative;
}

.timeline-item.left {
  flex-direction: row-reverse;
}

.timeline-dot {
  position: absolute;
  left: 50%;
  top: 32rpx;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dot-core {
  width: 16rpx;
  height: 16rpx;
  background: var(--primary-neon);
  border-radius: 50%;
  z-index: 2;
  box-shadow: 0 0 12rpx var(--primary-neon);
}

.dot-ripple {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid var(--primary-neon);
  opacity: 0.4;
  animation: ripple 2s infinite;
}

@keyframes ripple {
  0% { transform: scale(0.8); opacity: 0.6; }
  100% { transform: scale(2); opacity: 0; }
}

.timeline-content {
  width: 42%;
  position: relative;
}

.event-year {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
  text-align: right;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.5);
}

.timeline-item.left .event-year {
  text-align: left;
}

.event-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.event-img {
  width: 100%;
  height: 160rpx;
  background: rgba(0,0,0,0.2);
}

.event-info {
  padding: 20rpx;
}

.event-title {
  display: block;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.event-desc {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 2. 知识图谱视图 */
.graph-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.starry-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 星空背景由 CSS 径向渐变模拟 */
  background-image: 
    radial-gradient(2px 2px at 20px 30px, #eee, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 40px 70px, #fff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 50px 160px, #ddd, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 90px 40px, #fff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 130px 80px, #fff, rgba(0,0,0,0));
  background-size: 200px 200px;
  opacity: 0.3;
}

.graph-canvas {
  width: 100%;
  height: 100%;
}

.legend-panel {
  position: absolute;
  bottom: 40rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.4);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-item text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.dot.event { background: #FF5252; }
.dot.person { background: #448AFF; }
.dot.location { background: #69F0AE; }

/* 动画类 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}
