/**app.wxss**/

/* ==========================================================================
   Design System: New Guochao (Modern Chinese Trendy Style)
   ========================================================================== */

page {
  /* --- Color Palette --- */
  /* Primary: DAJIAN Red */
  --red-primary: #D32F2F;
  /* Secondary: Misty Gold */
  --gold-accent: #F7E8AA;
  /* Background: Cloud White */
  --bg-cloud: #F7F8FA;
  /* Text Colors */
  --text-main: #1F1F1F;
  --text-body: #333333;
  --text-muted: #999999;

  /* --- Shadows (Colored & Diffused) --- */
  --shadow-card-rest: 0 20rpx 40rpx -10rpx rgba(211, 47, 47, 0.15);
  --shadow-card-hover: 0 30rpx 60rpx -12rpx rgba(211, 47, 47, 0.25);

  /* --- Spacing --- */
  --spacing-standard: 32rpx;
  --spacing-loose: 48rpx;
  --spacing-tight: 16rpx;

  /* --- Safe Area --- */
  --safe-area-bottom: env(safe-area-inset-bottom);

  /* --- Global Reset & Base Styles --- */
  background-color: var(--bg-cloud);
  /* Subtle Noise Texture */
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.04'/%3E%3C/svg%3E");
  
  color: var(--text-body);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

/* ==========================================================================
   Typography Utilities
   ========================================================================== */

/* Serif Font for Headings (Songti/Historical Feel) */
.font-serif {
  font-family: 'Songti SC', 'Noto Serif SC', 'Source Han Serif CN', 'STSong', 'AR PL New Sung', 'AR PL SungtiL GB', serif;
  font-weight: 600;
}

/* Body Text Justification */
.text-justified {
  text-align: justify;
}

/* Text Colors */
.text-main { color: var(--text-main); }
.text-primary { color: var(--red-primary); }
.text-accent { color: #C19D58; /* Gold-ish for text */ }

/* ==========================================================================
   Glassmorphism Utilities
   ========================================================================== */

.glass-card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.6);
  box-shadow: var(--shadow-card-rest);
  border-radius: 32rpx;
}

/* Fallback for devices that don't support backdrop-filter */
@supports not (backdrop-filter: blur(20px)) {
  .glass-card {
    background: rgba(255, 255, 255, 0.95);
  }
}

/* ==========================================================================
   Layout Utilities
   ========================================================================== */

.flex-row { display: flex; flex-direction: row; align-items: center; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; justify-content: center; align-items: center; }
.flex-between { display: flex; justify-content: space-between; align-items: center; }

.container {
  padding: 0 var(--spacing-standard);
  padding-bottom: calc(var(--spacing-standard) + var(--safe-area-bottom));
}

/* ==========================================================================
   Animation Utilities
   ========================================================================== */

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

/* Generic Button Hover Effect */
.btn-hover {
  transform: scale(0.96);
  opacity: 0.9;
  transition: all 0.1s ease-in-out;
}
