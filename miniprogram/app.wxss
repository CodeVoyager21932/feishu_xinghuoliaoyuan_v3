/**app.wxss**/
/* 全局样式 */

page {
  /* 全局底色：云峰白 + 噪点纹理 */
  background-color: #F7F8FA; 
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 
               'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  color: var(--text-primary);
}

/* 色彩系统 (Design Language: Neo-Chinese Style) */
page {
  /* 主色：丹朱渐变 */
  --gradient-primary: linear-gradient(135deg, #FF4D4F 0%, #D32F2F 100%);
  /* 辅色：赤金 */
  --accent-gold: #C5A065;
  /* 背景：云峰白 */
  --bg-color: #F7F8FA;
  
  /* 单色 */
  --primary-red: #D32F2F;
  --text-primary: #1F1F1F; /* 墨黑 */
  --text-secondary: #666666; /* 雅灰 */
  --text-hint: #999999;
  --white: #FFFFFF;
  
  /* 阴影：弥散红韵 */
  --shadow-red: 0 12rpx 36rpx rgba(211, 47, 47, 0.15);
  --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  
  /* 玻璃拟态 */
  --glass-bg: rgba(255, 255, 255, 0.85);
  --glass-border: rgba(255, 255, 255, 0.6);
}

/* 字体系统 */
.font-serif {
  font-family: 'Songti SC', 'Noto Serif SC', serif; /* 衬线体，体现历史厚重感 */
}

/* 通用卡片样式 (Glassmorphism + Floating) */
.card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px); /* 毛玻璃效果 */
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid var(--glass-border);
  border-radius: 32rpx; /* 超椭圆大圆角 */
  box-shadow: var(--glass-shadow);
  padding: 32rpx;
  margin: 24rpx;
  position: relative;
  overflow: hidden;
}

/* 悬浮效果 (Z-axis) */
.card-hover {
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}
.card-hover:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn-primary {
  background: var(--gradient-primary);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(221, 36, 118, 0.3); /* 红色投影 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.8);
  color: #DD2476;
  border: 2rpx solid rgba(221, 36, 118, 0.2);
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 标题样式 */
.title-large {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: 1rpx;
}

.title-medium {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* Flex布局工具类 */
.flex-row { display: flex; flex-direction: row; align-items: center; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; justify-content: center; align-items: center; }
.flex-between { display: flex; justify-content: space-between; align-items: center; }

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}
